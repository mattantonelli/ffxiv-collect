<% title(t('general.spell.other')) %>
<% description(t('description.spells')) %>

<div class="d-flex justify-content-center my-2">
  <%= search_form_for(@q, url: spells_path, enforce_utf8: false, class: 'form form-inline search-form d-flex') do |f| %>
    <%= f.search_field "name_#{I18n.locale}_cont", placeholder: t('general.name'), size: 40,
      class: 'form-control form-control-sm flex-grow-1' %>
    <%= f.collection_select :type_id_eq, SpellType.all.order("name_#{I18n.locale}"), :id, :name,
      { include_blank: t('general.all_types') }, class: 'form-control form-control-sm' %>
    <%= f.select "aspect_name_#{I18n.locale}_eq", @aspects, { include_blank: t('general.all_aspects') },
      class: 'form-control form-control-sm' %>
    <%= f.select :rank_eq, rank_options, { include_blank: t('general.all_ranks') }, class: 'form-control form-control-sm' %>
    <%= button_tag fa_icon('filter', text: t('general.filter.other')), data: { toggle: 'modal', target: '#filters'},
      type: 'button', class: 'btn btn-secondary btn-sm modal-toggle' %>
    <%= f.submit t('general.search'), name: nil, class: 'btn btn-primary btn-sm mr-0' %>
  <% end %>
</div>
<%= render 'shared/filters' %>
<%= render 'shared/collection_progress', ids: @spells.map(&:id) %>
<%= javascript_tag "window._token = '#{form_authenticity_token}'" %>
<table class="table table-striped table-sm shadow sortable collection categorized <%= ' comparing' if @comparison.present? %>">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col" data-defaultsort="disabled"></th><!-- Image -->
      <th scope="col"><%= t('general.name') %></th>
      <th scope="col" class="hide-xs"><%= t('general.enemy') %></th>
      <th scope="col" class="hide-xs"><%= t('general.location') %></th>
      <th scope="col" class="text-center hide-md"><%= t('general.type') %></th>
      <th scope="col" class="text-center hide-md"><%= t('general.aspect') %></th>
      <th scope="col" class="text-center hide-md"><%= t('general.rank') %></th>
      <th scope="col" class="text-center hide-md"><%= t('general.own') %></th>
      <% if character_selected? %>
        <th scope="col"></th><!-- Owned -->
      <% end %>
      <% if @comparison.present? %>
        <th scope="col"></th><!-- Comparison -->
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @spells.each do |spell| %>
      <tr class="collectable<%= ' owned' if owned?(spell.id) %>">
        <td class="number"><%= t('general.index_prefix') %> <%= spell.order %></td>
        <td class="spell-sprite">
          <%= link_to(spell_path(spell)) do %>
            <%= sprite(spell, :spell) %>
          <% end %>
        </td>
        <td><%= link_to(spell.name, spell_path(spell), class: 'name') %></td>
        <td class="hide-xs"><%= spell_enemies(spell) %></td>
        <td class="hide-xs"><%= spell_locations(spell) %></td>
        <td class="text-center hide-md"><%= spell.type.name %></td>
        <td class="text-center hide-md"><%= spell.aspect.name %></td>
        <td class="text-center no-wrap hide-md" data-value="<%= spell.rank %>"><%= spell_rank(spell) %></td>
        <td class="text-center hide-md" data-value="<%= rarity(spell, numeric: true) %>"><%= rarity(spell) %></td>
        <% if character_selected? %>
          <%= td_owned(spell, manual: true) %>
        <% end %>
        <% if @comparison.present? %>
          <%= td_comparison(spell) %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
