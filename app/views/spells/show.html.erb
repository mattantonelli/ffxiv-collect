<% title(@spell.name) %>
<% description(@spell.description.truncate(150)) %>
<% image(image_url("spells/#{@spell.id}.png", skip_pipeline: true)) %>

<div class="row">
  <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2">
    <div class="card">
      <div class="card-header d-flex align-items-center justify-content-between">
        <div class="d-flex align-items-center">
          <div class="image-small spell-sprite">
            <%= sprite(@spell, 'spell') %>
          </div>
          <h5 class="card-title ml-3"><%= @spell.name %></h5>
        </div>
        <span class="badge badge-secondary">No. <%= @spell.order %></span>
      </div>
      <div class="card-body py-3">
        <div class="d-flex flex-column flex-info">
          <div class="d-flex flex-wrap">
            <div>
              <dt><%= t('general.type') %></dt>
              <dd><%= @spell.type.name %></dd>
            </div>
            <div>
              <dt><%= spell_aspect(@spell) %></dt>
              <dd><%= @spell.aspect.name %></dd>
            </div>
            <div>
              <dt><%= t('general.rank') %></dt>
              <dd><%= spell_rank(@spell) %></dd>
            </div>
            <%= render 'shared/ownership', collectable: @spell %>
            <div>
              <dt><%= t('general.patch') %></dt>
              <dd><%= @spell.patch %></dd>
            </div>
          </div>
          <dt><u><%= t('general.tooltip') %></u></dt>
          <dd><%= format_tooltip(@spell.tooltip) %></dd>
          <dt><u><%= t('general.description') %></u></dt>
          <dd><%= format_text(@spell.description) %></dd>
          <dt><u><%= t('general.how_to_learn') %></u></dt>
          <dd class="mb-0"><%= sources(@spell, list: true) %></dd>
        </div>
      </div>
    </div>
  </div>
</div>
