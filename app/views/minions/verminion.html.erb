<% title("#{t('general.minion.other')} - #{t('general.verminion')}") %>

<div class="d-flex justify-content-center mb-3">
  <div class="btn-group">
    <%= link_to t('general.standard'), minions_path, class: 'btn btn-secondary' %>
    <%= button_tag t('general.verminion'), class: 'btn btn-secondary active', disabled: true %>
  </div>
</div>
<div class="d-flex justify-content-center">
  <%= search_form_for(@q, url: verminion_minions_path, enforce_utf8: false, class: 'form form-inline search-form d-flex') do |f| %>
    <%= f.search_field "name_#{I18n.locale}_cont", placeholder: t('general.name'), size: 40,
      class: 'form-control form-control-sm flex-grow-1' %>
    <%= f.collection_select :race_id_eq, MinionRace.all.order("name_#{I18n.locale}"), :id, :name,
      { include_blank: t('general.all_race_types') }, class: 'form-control form-control-sm' %>
    <%= f.select :speed_eq, speed_options, { include_blank: t('general.all_speed') }, class: 'form-control form-control-sm' %>
    <%= select_tag :strength, strength_options(params[:strength]), include_blank: t('general.all_stength'),
      class: 'form-control form-control-sm multiselect' %>
    <%= f.collection_select :skill_type_id_eq, MinionSkillType.all.order("name_#{I18n.locale}"), :id, :name,
      { include_blank: t('general.all_skill_types') }, class: 'form-control form-control-sm' %>
    <%= button_tag fa_icon('filter', text: t('general.filter.other')), data: {toggle: 'modal', target: '#filters'},
                   type: 'button', class: 'btn btn-secondary btn-sm modal-toggle' %>
    <%= f.submit t('general.search'), name: nil, class: 'btn btn-primary btn-sm mr-0' %>
  <% end %>
</div>
<%= render 'shared/filters' %>
<%= render 'shared/collection_progress', ids: @minions.map(&:id) %>
<table class="table table-striped table-sm shadow collection sortable<%= ' comparing' if @comparison.present? %>">
  <thead>
    <tr>
      <th scope="col">#</th> <!-- Image -->
      <th scope="col" class="hide-xs"><%= t('general.name') %></th>
      <th scope="col" class="text-center"><%= t('general.race_type') %></th>
      <th scope="col" class="text-center"><%= t('general.hp') %></th>
      <th scope="col" class="text-center"><%= t('general.atk') %></th>
      <th scope="col" class="text-center"><%= t('general.def') %></th>
      <th scope="col"><%= t('general.speed') %></th>
      <th scope="col" class="text-center"><%= t('general.cost') %></th>
      <th scope="col" class="hide-md"><%= t('general.auto_attack') %></th>
      <th scope="col" class="hide-xs"><%= t('general.strengths') %></th>
      <th scope="col" class="hide-md"><%= t('general.skill_type') %></th>
      <th scope="col" class="text-center hide-md"><%= t('general.skill_points') %></th>
      <% if character_selected? %>
        <th scope="col"></th><!-- Owned -->
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @minions.each do |minion| %>
      <tr class="collectable no-fade<%= ' owned' if owned?(minion.id) %>">
        <td data-value="<%= minion.order %>">
          <%= link_to(minion_path(minion)) do %>
            <%= sprite(minion, 'minions-small') %>
          <% end %>
        </td>
        <td class="hide-xs"><%= link_to(minion.name, minion_path(minion), class: 'name') %></td>
        <td class="text-center" data-value="<%= minion.race_id %>" data-toggle="tooltip" title="<%= minion.race.name %>">
          <%= minion_type(minion) %>
        </td>
        <td class="text-center"><%= minion.hp %></td>
        <td class="text-center"><%= minion.attack %></td>
        <td class="text-center"><%= minion.defense %></td>
        <td class="no-wrap" data-value="<%= minion.speed %>"><%= speed(minion) %></td>
        <td class="text-center"><%= minion.cost %></td>
        <td class="hide-md"><%= auto_attack(minion) %></td>
        <td class="hide-xs" data-value="<%= strengths_count(minion) %>"><%= strengths(minion) %></td>
        <td class="hide-md" data-toggle="tooltip" data-html="true" title="<%= format_skill_description(minion) %>">
          <%= minion.skill_type&.name %>
        </td>
        <td class="text-center hide-md"><%= minion.skill_cost %></td>
        <% if character_selected? %>
          <% if @comparison.present? %>
            <%= td_comparison(minion) %>
          <% else %>
            <%= td_owned(minion) %>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
