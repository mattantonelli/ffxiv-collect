<% title(@mount.name) %>
<% description(@mount.enhanced_description.truncate(150)) %>
<% image(image_url("mounts/small/#{@mount.id}.png", skip_pipeline: true)) %>

<div class="row">
  <div class="col-12 col-lg-10 offset-0 offset-lg-1">
    <div class="card">
      <div class="card-header d-flex align-items-center">
        <h5 class="card-title"><%= @mount.name %></h5>
      </div>
      <div class="card-body">
        <div class="d-flex">
          <div class="d-none d-sm-block mr-4">
            <%= safe_image_tag("mounts/large/#{@mount.id}.png", class: 'image-large') %>
          </div>
          <div class="d-flex flex-column flex-info">
            <div class="d-flex flex-wrap">
              <div>
                <dt>Movement</dt>
                <dd><%= @mount.movement %></dd>
              </div>
              <div>
                <dt>Flying</dt>
                <dd><%= fa_check(@mount.flying) %></dd>
              </div>
              <div>
                <dt>Tradeable</dt>
                <dd><%= tradeable(@mount) %></dd>
              </div>
              <% if @mount.seats > 1 %>
                <div>
                  <dt>Seats</dt>
                  <dd><%= @mount.seats %></dd>
                </div>
              <% end %>
              <%= render 'shared/ownership', collectable: @mount %>
              <div>
                <dt>Patch</dt>
                <dd><%= @mount.patch %></dd>
              </div>
            </div>
            <dt>Source</dt>
            <dd><%= sources(@mount, list: true) %></dd>
            <dt>Description</dt>
            <dd><%= format_text(@mount.description) %></dd>
            <dt>Journal</dt>
            <dd><%= format_text(@mount.enhanced_description) %></dd>
            <dt>Tooltip</dt>
            <dd><%= format_text(@mount.tooltip) %></dd>
            <div class="d-block d-sm-none">
              <%= safe_image_tag("mounts/large/#{@mount.id}.png", class: 'image-large') %>
            </div>
          </div>
        </div>
        <div class="mount-footprint">
          <%= safe_image_tag("mounts/footprint/#{@mount.id}.png") %>
        </div>
      </div>
    </div>
  </div>
  <% if @mount.video.present? %>
    <div class="col-12 mt-2 d-none d-sm-block">
      <div class="card video">
        <div class="card-header">
          <h5 class="card-title">Video Preview</h5>
        </div>
        <div class="card-body text-center">
          <iframe width="560" height="315" src="<%= @mount.video %>" frameborder="0"
            allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
      </div>
    </div>
  <% end %>
</div>
