<div class="card">
  <div class="card-header">
    <div class="d-flex align-items-center">
      <%= link_to :admin_users, class: 'unstyled mr-auto pt-1' do %>
        <h5>Manage Users</h5>
      <% end %>
      <%= search_form_for(@q, url: admin_users_path, class: 'form form-inline admin-search-form') do |f| %>
        <%= f.search_field :username_cont, placeholder: t(:'user.name'), size: 30, class: 'form-control form-control-sm mr-2' %>
        <%= f.submit 'Search', class: 'btn btn-secondary btn-sm' %>
      <% end %>
    </div>
  </div>
  <div class="card-body card-table">
    <table class="table table-striped table-sm">
      <tr>
        <th></th> <!-- Avatar -->
        <th><%= t :'user.name' %></th>
        <th>'Discord ID'</th>
        <th><%= t :'general.character' %></th>
        <th><%= t :'general.created' %>></th>
        <th><%= t :'user.last_signed_in' %></th>
      </tr>
      <% @users.each do |user| %>
        <tr>
          <td><%= avatar(user) %></td>
          <td><%= username(user) %></td>
          <td><%= user.uid %></td>
          <td><%= link_to(user.character.name, character_path(user.character_id)) if user.character.present? %></td>
          <td><%= format_date(user.created_at) %></td>
          <td><%= format_date(user.current_sign_in_at) %></td>
        </tr>
      <% end %>
    </table>
  </div>
  <div class="card-footer d-flex justify-content-center mb-0">
    <%= will_paginate(@users) %>
  </div>
</div>
