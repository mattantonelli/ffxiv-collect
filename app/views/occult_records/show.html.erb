<% title(@record.name) %>
<% description(@record.description.truncate(150)) %>
<% image(image_url("occult_records/#{@record.id}.png", skip_pipeline: true)) %>

<div class="row">
  <div class="col-12 col-xl-8 offset-xl-2">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title"><%= format_record_number(@record) %>. <%= @record.name %></h5>
      </div>
      <div class="card-body">
        <div class="d-flex">
          <div class="d-flex flex-column flex-info">
            <div class="d-flex flex-wrap">
              <%= render 'shared/ownership', collectable: @record %>
              <div>
                <dt><%= t('patch') %></dt>
                <dd><%= @record.patch %></dd>
              </div>
            </div>
            <div class="d-none d-sm-block">
              <%= safe_image_tag("occult_records/#{@record.id}.png") %>
            </div>
            <dt><%= t('source') %></dt>
            <dd><%= sources(@record, list: true) %></dd>
            <dt><%= t('description') %></dt>
            <dd><%= format_skill_description(@record.description) %></dd>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
