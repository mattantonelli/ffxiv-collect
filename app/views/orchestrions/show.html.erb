<% title(@orchestrion.name) %>
<% description(@orchestrion.description.truncate(150)) %>
<% image(image_url('orchestrion.png', skip_pipeline: true)) %>

<div class="row">
  <div class="col-12 col-lg-8 col-xl-6 offset-lg-2 offset-xl-3">
    <div class="card">
      <div class="card-header d-flex align-items-center">
        <%= image_tag('orchestrion.png') %>
        <h5 class="card-title ml-2">
          <%= orchestrion_number(@orchestrion) %>
          <%= @orchestrion.name %>
        </h5>
      </div>
      <div class="card-body py-3">
        <div class="d-flex flex-column flex-info">
          <div class="d-flex flex-wrap">
            <div>
              <dt><%= t('category') %></dt>
              <dd>
                <%= link_to @orchestrion.category.name,
                  orchestrions_path(category: @orchestrion.category_id), class: 'unstyled' %>
              </dd>
            </div>
            <div>
              <dt><%= t('tradeable') %></dt>
              <dd><%= tradeable(@orchestrion) %></dd>
            </div>
            <%= render 'shared/ownership', collectable: @orchestrion %>
            <div>
              <dt><%= t('patch') %></dt>
              <dd><%= @orchestrion.patch %></dd>
            </div>
          </div>
          <dt><%= t('source') %></dt>
          <dd class="mb-0"><%= sources(@orchestrion) %></dd>
          <%= render('shared/item', collectable: @orchestrion) %>
        </div>
      </div>
    </div>
  </div>
</div>
