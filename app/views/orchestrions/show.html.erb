<% title(@orchestrion.name) %>
<% description(@orchestrion.description.truncate(150)) %>
<% image(image_url('orchestrion.png', skip_pipeline: true)) %>

<div class="row">
  <div class="col-12 col-sm-10 col-md-8 col-lg-6 offset-sm-1 offset-md-2 offset-lg-3">
    <div class="card">
      <div class="card-header d-flex align-items-center">
        <%= image_tag('orchestrion.png') %>
        <h5 class="card-title ml-2">
          <%= orchestrion_number(@orchestrion) %>
          <%= @orchestrion.name %>
        </h5>
      </div>
      <div class="card-body">
        <div class="d-flex flex-column flex-info">
          <div class="d-flex flex-wrap">
            <div>
              <dt><%= t('general.category') %></dt>
              <dd>
                <%= link_to @orchestrion.category.name,
                  orchestrions_path(category: @orchestrion.category_id), class: 'unstyled' %>
              </dd>
            </div>
            <div>
              <dt><%= t('general.tradeable') %></dt>
              <dd><%= tradeable(@orchestrion) %></dd>
            </div>
            <%= render 'shared/ownership', collectable: @orchestrion %>
            <div>
              <dt><%= t('general.patch') %></dt>
              <dd><%= @orchestrion.patch %></dd>
            </div>
          </div>
          <dt><%= t('general.patch') %></dt>
          <dd class="mb-0"><%= format_text_long(@orchestrion.description) %></dd>
          <hr>
          <h6><%= t('general.audio_sample') %></h6>
          <audio controls="" controlslist="nodownload" class="my-2">
            <source src="https://www.garlandtools.org/files/orchestrion/<%= @orchestrion.id %>.ogg" type="audio/ogg">
          </audio>
          <p class="mb-0"><%= t('general.powered_by') %> <%= link_to 'Garland Tools', 'http://www.garlandtools.org/db', target: '_blank' %></p>
        </div>
      </div>
    </div>
  </div>
</div>
