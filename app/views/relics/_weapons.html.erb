<div class="d-flex flex-wrap justify-content-xl-around">
  <% weapons.each do |relic| %>
    <%= link_to(achievement_path(relic), class: "relic p-2#{ ' owned' if !character_selected? || owned?(relic.id)}",
      data: { toggle: 'tooltip', html: true }, title: relic_tooltip(relic)) do %>
      <%= sprite(relic, 'achievement') %>
    <% end %>
  <% end %>
</div>
