<% title('Relic Weapons') %>
<% description("Automatically track your character's relic weapons.") %>

<div class="d-flex justify-content-end mb-2">
  <button class="btn btn-secondary btn-sm mr-1" id="collapseToggle" data-expanded="false">
    <%= fa_icon('expand', text: 'Expand All') %>
  </button>
</div>

<div class="card mb-3">
  <%= render 'header', relic: @resistance_weapons, name: 'Resistance Weapons' %>
  <div class="collapse show" id="collapse-resistance-weapons">
    <div class="card-body py-3">
      <%= render partial: 'weapons', collection: @resistance_weapons.each_slice(@resistance_weapons.size / 17).to_a.transpose %>
    </div>
  </div>
</div>

