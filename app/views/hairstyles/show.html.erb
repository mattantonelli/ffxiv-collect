<% title(@hairstyle.name) %>
<% description(@hairstyle.description&.truncate(150)) %>
<% image(image_url("hairstyles/samples/#{@hairstyle.id}.png", skip_pipeline: true)) %>

<div class="row">
  <div class="col-12 col-xl-7 mx-auto">
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title">
          <%= @hairstyle.name %>
          <span class="ml-1">
            <%= gender_symbol(@hairstyle.gender) %>
            <%= hrothable(@hairstyle) %>
            <%= femhrothable(@hairstyle) %>
            <%= vierable(@hairstyle) %>
          </span>
        </h5>
      </div>
      <div class="card-body d-flex flex-column flex-info">
        <div class="d-flex flex-wrap">
          <div>
            <dt><%= t('tradeable') %></dt>
            <dd><%= tradeable(@hairstyle) %></dd>
          </div>
          <%= render 'shared/ownership', collectable: @hairstyle %>
          <div>
            <dt><%= t('patch') %></dt>
            <dd><%= @hairstyle.patch %></dd>
          </div>
        </div>
        <dt><%= t('source') %></dt>
        <dd><%= sources(@hairstyle) %></dd>
        <% if @hairstyle.description.present? %>
          <dt><%= t('description') %></dt>
          <dd class="mb-0"><%= format_text(@hairstyle.description) %></dd>
        <% end %>
        <hr>
        <% if @screenshots.present? %>
          <%= render 'screenshots' %>
        <% end %>
        <div class="d-flex flex-wrap hairstyle-list">
          <% @hairstyle.image_count.times do |i| %>
            <%= hairstyle_image(@hairstyle, i) %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
