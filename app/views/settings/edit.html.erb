<% title('Settings') %>
<% description('Manage your user and character settings.') %>

<div class="row">
  <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title">User Settings</h5>
      </div>
      <div class="card-body py-3">
        <%= form_for(@user, url: user_settings_path, html: { class: 'form' }) do |f| %>
          <div class="form-group">
            <%= f.label :database, 'Database Links' %>
            <%= f.select :database, database_options(@user.database), {}, class: 'form-control form-control-sm' %>
          </div>
          <div class="text-right mt-3">
            <%= f.submit 'Save', class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>

    <% if @character.present? && @character.verified_user?(@user) %>
      <div class="card mt-4">
        <div class="card-header">
          <h5 class="card-title">Character Settings</h5>
        </div>
        <div class="card-body py-3">
          <%= form_for(@character, url: character_settings_path, html: { class: 'form' }) do |f| %>
            <div class="form-group form-check">
              <%= f.check_box :public %>
              <%= f.label :public, "Make this character's collections publicly available" %>
            </div>
            <div class="text-right mt-2">
              <%= f.submit 'Save', class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
