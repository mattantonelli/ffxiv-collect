<% title(@outfit.name) %>
<% image(image_url("outfits/#{@outfit.id}.png", skip_pipeline: true)) %>

<div class="row">
  <div class="col-12 col-lg-8 col-xl-6 offset-lg-2 offset-xl-3">
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
          <div class="image-small">
            <%= sprite(@outfit, 'outfit') %>
          </div>
          <h5 class="card-title mx-2">
            <%= @outfit.name %>
            <%= gender_symbol(@outfit.gender) %>
            <%= armoireable(@outfit) %>
          </h5>
        </div>
      </div>
      <div class="card-body py-3">
        <div class="d-flex flex-column flex-info">
          <div class="d-flex flex-wrap">
            <div>
              <dt><%= t('tradeable') %></dt>
              <dd><%= fa_check(@outfit.tradeable?) %></dd>
            </div>
            <%= render 'shared/ownership', collectable: @outfit %>
            <div>
              <dt><%= t('patch') %></dt>
              <dd><%= @outfit.patch %></dd>
            </div>
          </div>
          <dt><%= t('outfits.items') %></dt>
          <dd class="d-flex flex-wrap outfit-items">
            <%= outfit_items(@outfit) %>
          </dd>
          <dt><%= t('source') %></dt>
          <dd class="mb-0"><%= sources(@outfit, list: true) %></dd>
        </div>
      </div>
    </div>
  </div>
</div>
