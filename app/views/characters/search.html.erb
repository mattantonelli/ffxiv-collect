<% title(t('character.search')) %>
<% description(t('description.character_search')) %>

<div class="row">
  <div class="col-12 col-lg-6 col-xl-5 offset-xl-1 mb-3 mb-xl-0 <%= ' mx-auto' unless @characters.present? %>">
    <%= render 'form' %>
  </div>
  <% if @characters.present? %>
    <div class="col-12 col-lg-6 col-xl-5">
      <%= render 'results' %>
    </div>
  <% end %>
</div>
